<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="uiState"
            type="com.example.android.metercollectionapp.presentation.uistate.WriteValuesElementUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tw_param_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:padding="@dimen/space_4"
            android:textAppearance="@style/SubtitleTextAppearance"
            android:text="@{uiState.stringValue}"
            app:layout_constraintBottom_toBottomOf="@+id/iw_delete_element"
            app:layout_constraintEnd_toStartOf="@+id/tw_meas_unit"
            app:layout_constraintStart_toEndOf="@+id/tw_short_param_name"
            app:layout_constraintTop_toTopOf="@+id/iw_delete_element"
            tools:text="100500" />

        <TextView
            android:id="@+id/tw_short_param_name"
            android:layout_width="?attr/largeFixedColumnWidth"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/space_4"
            android:textAppearance="@style/SubtitleTextAppearance"
            android:text="@{uiState.shortName}"
            app:layout_constraintBottom_toBottomOf="@+id/iw_delete_element"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iw_delete_element"
            tools:text="Pвых." />

        <TextView
            android:id="@+id/tw_meas_unit"
            android:layout_width="?attr/smallFixedColumnWidth"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/space_4"
            android:textAppearance="@style/SubtitleTextAppearance"
            android:text="@{uiState.measUnit}"
            app:layout_constraintBottom_toBottomOf="@+id/iw_delete_element"
            app:layout_constraintEnd_toStartOf="@+id/iw_delete_element"
            app:layout_constraintTop_toTopOf="@+id/iw_delete_element"
            tools:text="Вт" />

        <ImageView
            android:id="@+id/iw_delete_element"
            android:layout_width="?largeIconSize"
            android:layout_height="?largeIconSize"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_delete_48"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_4"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iw_delete_element" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>