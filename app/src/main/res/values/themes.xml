<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeterCollectionApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- FontFamily -->
        <item name="fontFamily">@font/mark_pro</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <!-- иконка back (стрелка) белого цвета, символ OverflowMenu (три точки) -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- редактируемый текст в поле поиска -->
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
        <!-- иконка поиска -->
        <item name="iconTint">?attr/colorOnPrimary</item>
        <!-- текст в выпадающем меню -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>