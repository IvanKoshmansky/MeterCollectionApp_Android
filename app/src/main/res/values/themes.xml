<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeterCollectionApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- ШРИФТЫ: тип шрифта и размерный ряд (остальное задается в TextAppearance) -->
        <item name="fontFamily">@font/mark_pro</item>
        <item name="bodyTextSize">@dimen/text_14</item>
        <item name="subtitleTextSize">@dimen/text_16</item>
        <!-- ИКОНКИ -->
        <item name="smallIconSize">@dimen/size_24</item>
        <item name="largeIconSize">@dimen/size_48</item>
        <!-- ЧЕКБОКСЫ -->
        <item name="smallCheckboxSize">@dimen/size_24</item>
        <!-- ПОЛЯ ВВОДА -->
        <item name="smallEditTextHeight">@dimen/size_48</item>
        <item name="largeEditTextHeight">@dimen/size_64</item>
        <!-- ШИРИНА КОЛОНОК ТАБЛИЦ -->
        <item name="smallFixedColumnWidth">@dimen/size_72</item>
        <item name="largeFixedColumnWidth">@dimen/size_128</item>
        <!-- SPINNER -->
        <item name="spinnerHeight">@dimen/size_32</item>
        <!-- КПОПКИ -->
        <item name="smallFixedButtonWidth">@dimen/size_64</item>
        <!-- РАЗДЕЛИТЕЛЬ -->
        <item name="dividerSpaces">@dimen/space_4</item>
        <!-- СКАННЕР QR КОДОВ -->
        <item name="defaultScannerBorderColor">?colorOnPrimary</item>
        <item name="defaultScannerOverlayColor">@color/grey_alfa_30</item>
        <item name="defaultScannerBorderWidth">@dimen/size_4</item>
    </style>
</resources>