<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScannerOverlayView">
        <attr name="borderColor" format="color" />
        <attr name="overlayColor" format="color" />
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <!-- атрибуты которые используются в теме -->
    <attr name="background_drawable" format="reference"/>
    <attr name="bodyTextSize" format="integer" />
    <attr name="subtitleTextSize" format="integer" />
    <attr name="titleTextSize" format="integer" />
    <attr name="textColorPrimary" format="color" />
    <attr name="defaultScannerBorderColor" format="color" />
    <attr name="defaultScannerOverlayColor" format="color" />
    <attr name="defaultScannerBorderWidth" format="dimension" />
    <attr name="smallIconSize" format="integer" />
    <attr name="largeIconSize" format="integer" />
    <attr name="smallCheckboxSize" format="integer" />
    <attr name="smallEditTextHeight" format="integer" />
    <attr name="largeEditTextHeight" format="integer" />
    <attr name="largeFixedExitTextWidth" format="integer" />
    <attr name="smallFixedColumnWidth" format="integer" />
    <attr name="largeFixedColumnWidth" format="integer" />
    <attr name="spinnerHeight" format="integer" />
    <attr name="smallFixedButtonWidth" format="integer" />
    <attr name="dividerSpaces" format="integer" />
</resources>

<!-- <declare-styleable> доступно через AttributeSet и TypedArray -->